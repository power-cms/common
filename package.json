{
  "name": "@power-cms/common",
  "version": "0.1.0",
  "description": "PowerCms - Common package",
  "repository": "https://github.com/Qcumbeer/power-cms-common",
  "scripts": {
    "test": "jest --coverage --runInBand --forceExit --detectOpenHandles",
    "type-check": "tsc --noEmit",
    "build": "ls | grep -E \"src|\\.d\\.ts$|\\.js$\" | xargs rm -rf && tsc",
    "lint": "tslint -c tslint.json --project .",
    "lint-fix": "tslint -c tslint.json 'lib/**/*.ts' --fix"
  },
  "author": {
    "name": "Szymon Piecuch",
    "email": "szymek.piecuch@gmail.com"
  },
  "files": [
    "src",
    "*.d.ts",
    "*.js"
  ],
  "license": "ISC",
  "dependencies": {
    "bson": "^4.0.1",
    "joi": "^14.3.0",
    "mongodb": "^3.1.10"
  },
  "devDependencies": {
    "@types/bson": "^1.0.11",
    "@types/jest": "^23.3.5",
    "@types/joi": "^13.6.0",
    "@types/mongodb": "^3.1.10",
    "jest": "^23.6.0",
    "ts-jest": "^23.10.3",
    "ts-lint": "^4.5.1",
    "tslint": "^5.11.0",
    "tslint-config-prettier": "^1.15.0",
    "tslint-sonarts": "^1.8.0",
    "typescript": "^3.1.1"
  },
  "jest": {
    "collectCoverageFrom": [
      "lib/**/*.ts",
      "!lib/**/index.ts",
      "!lib/*.ts"
    ],
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "testRegex": "\\.(test|spec)\\.ts$",
    "moduleFileExtensions": [
      "ts",
      "js",
      "json",
      "node"
    ],
    "globals": {
      "ts-jest": {
        "tsConfig": "tsconfig.test.json"
      }
    }
  }
}
